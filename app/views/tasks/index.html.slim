.container
  .row
    .col-md-6.col-md-offset-3
      .header.text-center
        h1
          |  ToDo List application 
        small
          |  Just for you :) 
      .task-container
        .form-group
          label
            | Your task :
          input type='text' class='content-field form-control' name='task-content' placeholder="Your new task .o." data-url=tasks_path
    
        .option-container
          h4
            |  Filter 
          ul.list-inline
            li
              = link_to 'All', all_tasks_path, method: 'GET', class: 'task-all-btn', remote: true
            li
              = link_to 'In progress', inprogress_tasks_path, method: 'GET', class: 'task-inprogress-btn', remote: true
            li
              = link_to 'Completed', completed_tasks_path, method: 'GET', class: 'task-completed-btn', remote: true
            li
              = link_to 'Clear all', clear_all_tasks_path, method: :delete, class: 'clear-all-btn', data: { confirm: 'Are you sure?', remote: true }
        .task-list
          - @tasks.each do |task|
            .bs-callout id="task-#{task.id}" class="bs-callout-#{ task.status == 1 ? 'info' : 'success'}"
              h4
                |  Task : 
              p
                = task.content
              .suppress-icon
                = link_to task, method: :delete, class: 'suppress-btn', data: { confirm: 'Are you sure?', remote: true }
                  i.fa.fa-times
              .status-icon
                = link_to task_switch_status_path(task), method: 'PUT', class: 'status-btn', remote: true
                  i.fa.fa-2x.fa-thumbs-o-up class=" #{ task.status == 0 ? 'checked' : '' }"
